<div class="container">
    {{#if user}}
        <div class="col-md-4 mx-auto mt-4 animated slideInDown faster">
            <div class="card">
                <div class="card-header">
                    <h3>{{user.username}}</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="email" class="form-control" value="{{user.email}}">
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>