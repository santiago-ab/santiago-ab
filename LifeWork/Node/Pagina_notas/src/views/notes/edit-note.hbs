<div class="col-md-4 mx-auto mt-4 animated slideInDown faster">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{nota._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" value="{{nota.titulo}}" autofocus required>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control" cols="30" rows="5" required>{{nota.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>