<div class="row mt-4">
    <div class="col-8">
        <div class="card border-0">
            <div class="card-header text-light" style="background-color: #2969b3;">
                <h3 class="card-title">
                    My Images
                </h3>
            </div>
            <div class="card-body">
                {{#each imagenes}}
                <div class="card mb-4">
                    <div class="card-header text-light" style="background-color: #1a416e;">
                    </div>
                    <div class="card-body" style="background-color: #d1d1d1;">
                        <div class="row">
                            <div class="col-10">
                                <h3>
                                    {{title}}
                                </h3>
                            </div>
                            <div class="col-2">
                                <p>
                                    {{tiempo timestamp}}
                                </p>
                            </div>
                        </div>
                        <hr>
                        <a href="/images/{{_id}}">
                            <img src="../public/upload/{{filename}}" alt="" class="w-100 h-100">
                        </a>
                        <hr>
                        <div class="row">
                            <div class="col-3">
                                <label>&#9825 Likes: <span>{{likes}}</span></label>
                            </div>
                            <div class="col-3 mr-auto">
                                <label>&#9903 Viewes: <span>{{views}}</span></label>
                            </div>
                            <div class="col-3 ml-auto">
                                <button class="btn btn-danger btn-remove" data-id="{{_id}}">&#10005 Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card border-0">
            <div class="card-header text-light" style="background-color: #2969b3;">
                <h3 class="card-title">
                    Stats
                </h3>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
</div>