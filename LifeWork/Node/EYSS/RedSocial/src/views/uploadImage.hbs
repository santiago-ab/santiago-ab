<div class="row mt-4">
    <div class="col-8">
        <div class="card border-0">
            <div class="card-header text-light" style="background-color: #2969b3;">
                <h3 class="card-title">
                    Upload photos
                </h3>
            </div>
            <div class="card-body">
                <form action="/images/upload" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                                <label class="custom-file-label" for="inputGroupFile">Choose Image</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title for the Image" required>
                    </div>
                    <div class="form-group">
                        <textarea type="text" name="description" class="form-control" placeholder="Description for the Image" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

